            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "args": [
                "${config:project.server.INPUT_FILE}",
                "--remake_container_only"
            ]
        },
        {
            "name": "python debug : server : reboot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "args": [
                "${config:project.server.INPUT_FILE}"
            ]
        }
    ]
}
