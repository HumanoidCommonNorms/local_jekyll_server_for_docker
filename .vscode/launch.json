{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "python debug : server : setup",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "args": [
                "${config:project.server.INPUT_FILE}",
                "--setup"
            ]
        },
        {
            "name": "python debug : server : remake container",
            "type": "debugpy",
